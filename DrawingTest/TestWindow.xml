<?xml version="1.0" encoding="utf-8" ?>
<div style="justify-content: center; align-items: center;">
    <style>
    .blue {
        border: 1 #0000FFFF; // long version with alpha
    }
    .red {
        border: 1 #F003; // short version with alpha
    }
    .green {
        border: 1 #0F0; // short version
    }
    .wrapper {
        border: 1 rgb(102, 51, 153); // rgb, rebeccapurple
        padding: 10;
        flex-direction: row;
        column-gap: 10;
    }
    .icon {
        border: 1 #0F0; // short version
    }
    </style>
    <template id="testbox">
        <div class="{color}" style="width: 40; height: 40; justify-content: center; align-items: center;">
            {children}
        </div>
    </template>
    <template id="iconbox">
        <icon icon-id="{icon-id}" style="size: {size}"/>
    </template>
    <div class="wrapper">
        <testbox color="blue">
            Blue
        </testbox>
        <testbox color="red">
            Red
        </testbox>
        <testbox color="green">
            Green
        </testbox>
    </div>
    <div class="wrapper" style="border-top: 0">
        <iconbox icon-id="12" size="20" />
        <iconbox icon-id="13" size="30" />
        <iconbox icon-id="14" size="40" />
    </div>
    <clock format="HH:mm:ss" />
</div>
