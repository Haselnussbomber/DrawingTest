<?xml version="1.0" encoding="utf-8" ?>
<div class="window">
    <link rel="stylesheet" href="DrawingTest.styles.css" />
    <link rel="stylesheet" href="DrawingTest.TestWindow.css" />
    <style>
        .icon {
            border: 1px #0F0; /* short version */
        }
        div#red.red { color: #F00; }
        .icon.red { color: #F00; }
        .banana > .red { color: #F00; }

        .window {
            flex-grow: 1;
            background-color: imguicol(WindowBg);
        }

        .titlebar {
            flex-direction: row;
            justify-content: space-between;
            padding: 4px 7px;
            background-color: imguicol(TitleBg);
        }
        .window.win-focused .titlebar {
            background-color: imguicol(TitleBgActive);
        }
        .titlebar .close-button {
            background-color: #F004;
            border-radius: 10px;
            padding: 2px 7px;
        }
        .titlebar .close-button:hover {
            background-color: #F00A;
            cursor: hand;
        }

        #character-icon {
            cursor: hand;
            width: 40px;
            height: 40px;
        }
    </style>
    <div class="titlebar">
        <div>
            Test Window
        </div>
        <div>
            <div id="close-button" class="close-button">X</div>
        </div>
    </div>
    <div style="justify-content: center; align-items: center;"> <!-- TODO: scroll??? -->
        <div class="wrapper">
            <div id="red" class="red">Red</div>
            <div class="green">Green</div>
            <div class="blue">Blue</div>
        </div>
        <div class="wrapper" style="border-top: 0">
            <icon id="character-icon" icon-id="1" style="width: 40; aspect-ratio: 1" interactive="true" />
            <icon icon-id="14" style="width: 40; aspect-ratio: 1" />
            <uld-part uld="Achievement" part-list-id="4" part-index="5" style="width: 60; aspect-ratio: 1" />
        </div>
        <clock format="HH:mm:ss" style="margin-top: 10" /> <!-- TODO: padding-top didn't work -->
        <div style="font: 24px Axis;">Axis</div>
        <div style="font: 24px Jupiter;">Jupiter</div>
        <div style="font: 24px Meidinger;">1234</div>
        <div style="font: 24px MeidingerMid;">5678</div>
        <div style="font: 24px TrumpGothic;">TrumpGothic</div>
        Some New<br/>Line Test

        <div class="selectortest">
            <div class="child">
                -1
            </div>
            <div class="first-child">
                <div class="first-child-child child">
                    0
                </div>
                <div id="first-child-child2withid" class="child">
                    1
                </div>
                <div class="child">
                    <div class="superchild">
                        1.1
                    </div>
                </div>
                <div class="insane child">
                    1.2
                </div>
                <div id="first-child-child3" class="child">
                    2
                </div>
            </div>
        </div>
    </div>
</div>
