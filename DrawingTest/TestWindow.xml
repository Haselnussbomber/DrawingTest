<?xml version="1.0" encoding="utf-8" ?>
<div style="justify-content: center; align-items: center;">
    <style>
    .blue {
        border: 1 #0000FFFF; // long version with alpha
    }
    .red {
        border: 1 #F009; // short version with alpha
    }
    .green {
        border: 1 #0F0; // short version
    }
    .box {
        size: 40;
        justify-content: center;
        align-items: center;
    }
    .wrapper {
        border: 1 rgb(102, 51, 153); // rgb, rebeccapurple
        padding: 10;
        flex-direction: row;
        column-gap: 10;
    }
    .icon {
        border: 1 #0F0; // short version
    }
    </style>
    <template id="testbox">
        <div class="box"> <!-- despite overwritten by the template user, this will still be applied -->
            <div style="flex-direction: row;">
                <div>{children}</div>!
            </div>
        </div>
    </template>
    <template id="iconbox">
        <icon />
    </template>
    <div class="wrapper">
        <testbox class="red">
            Red
        </testbox>
        <testbox class="green">
            Green
        </testbox>
        <testbox class="blue">
            Blue
        </testbox>
    </div>
    <div class="wrapper" style="border-top: 0">
        <iconbox id="character-icon" icon-id="1" style="size: 40" enableMouse="true" />
        <iconbox icon-id="14" style="size: 40" />
    </div>
    <clock format="HH:mm:ss" />
</div>
