<?xml version="1.0" encoding="utf-8" ?>
<div style="justify-content: center; align-items: center;">
    <link rel="stylesheet" href="DrawingTest.styles.css" />
    <style>
    .icon {
        border: 1 #0F0; /* short version */
    }
    </style>
    <template id="testbox">
        <div class="box"> <!-- despite overwritten by the template user, this will still be applied -->
            <div style="flex-direction: row;">
                <div>{children}</div>!
            </div>
        </div>
    </template>
    <template id="iconbox">
        <icon />
    </template>
    <div class="wrapper">
        <testbox class="red">
            Red
        </testbox>
        <testbox class="green">
            Green
        </testbox>
        <testbox class="blue">
            Blue
        </testbox>
    </div>
    <div class="wrapper" style="border-top: 0">
        <iconbox id="character-icon" icon-id="1" style="size: 40" enableMouse="true" />
        <iconbox icon-id="14" style="size: 40" />
    </div>
    <clock format="HH:mm:ss" style="margin-top: 10" /> <!-- TODO: padding-top didn't work -->
</div>
